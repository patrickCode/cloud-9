@{
    ViewData["Title"] = "SAS Provider";
}
@model SAS.Provider.Web.Models.BlobContainerSasRequestModel


<div class="row">
    <form asp-controller="Sas" asp-action="Token" method="post">
        <div class="form-group">
            <label for="storage-account-name">Storage Account Name:</label>
            <input type="text" class="form-control" id="storage-account-name" asp-for="StorageAccountName" placeholder="Enter the Storage Account name containing the blob container"/>
        </div>
        <div class="form-group">
            <label for="storage-account-key">Storage Account Key:</label>
            <input type="password" class="form-control" id="storage-account-key" asp-for="StorageAccountKey" placeholder="Enter the primary/secondary key of the storage account"/>
        </div>
        <div class="form-group">
            <label for="blob-container">Blob Container:</label>
            <input type="text" class="form-control" id="blob-container" asp-for="BlobContainerName" placeholder="Enter the container name for which access needs to be given"/>
        </div>
        <div class="form-group">
            <label for="activation-period">Activation Period:</label>
            <input type="number" step="any" class="form-control" id="activation-period" asp-for="ActivationPeriod" placeholder="Add Activation period in hours"/>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
